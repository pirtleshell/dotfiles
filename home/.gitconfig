[user]
	name = Robert Pirtle
	email = astropirtle@gmail.com
[core]
	preloadindex = true
	# safe rebasing on macOS
	trustctime = false
[pull]
	rebase = true
[alias]
	co = checkout
	cp = cherry-pick
	st = status

	# ignore whitespace by default
	diff = diff -w
	show = show -w

	names = log --name-only

	rekt = push origin master -f

	# logging shortcuts
	lgo = log
	my-log = log --author=Pirtle
	my-files = log --author=Pirtle --name-only

	superlog = !"git log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n          %C(white)%s%C(reset) %C(dim white)-%C(reset)%C(bold blue) %an%C(reset)' --all"

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	commit = green bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "status"]
	added = yellow
	changed = green
	untracked = cyan
